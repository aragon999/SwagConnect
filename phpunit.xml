<?xml version="1.0"?>
<phpunit bootstrap="./Tests/Shopware/Connect/Bootstrap.php" colors="true">
    <testsuites>
        <testsuite name="Shopware Connect Plugin">
            <directory>Tests/</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory suffix=".php">./</directory>
            <exclude>
                <directory suffix=".php">./Tests</directory>
                <directory suffix=".php">./vendor</directory>
                <directory>Library</directory>
            </exclude>
        </whitelist>
    </filter>
</phpunit>
